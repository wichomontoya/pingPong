<h1>Ranking</h1>

<h2>El rey de la cancha es!!!!</h2>
<h3><%=@players[0].nick_name%></h3>
<p>con <%=@players[0].score%> puntos</p>
<div class="">
  <table class="table table-striped talbe-bordered text-center col-sm-8">
    <thead>
      <tr>
        <th>
          Jugador
        </th>
        <th>
          Puntaje
        </th>
      </tr>
    </thead>
    <tbody>
    <%@players.each do |p|%>
      <%if p != @players[0]%>
        <tr>
          <td>
            <%=p.nick_name%>
          </td>
          <td>
            <%=p.score%>
          </td>
        </tr>
      <%end%>
    <%end%>
    </tbody>
  </table>
</div>

<button type="button" name="button">
  <a href="/games/home">Nueva Partida</a>
</button>
